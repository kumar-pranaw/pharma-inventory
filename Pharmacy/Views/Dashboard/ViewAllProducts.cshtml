@model IEnumerable<Pharmacy.ViewModels.ListProductViewModel>
@{
    ViewBag.Title = "ViewAllProducts";
    var message = TempData["message"];
}
<style>
    .container.prod-table {
        margin: 89px 0px 0px 0px;
    }
</style>

<div class="container prod-table">
    <h1>@message</h1> <br />
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>HSN Number</th>
                <th>Batch Number</th>
                <th>MRP</th>
                <th>Rate</th>
                <th>Selling Price</th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.HSNNumber</td>
                    <td>@item.BatchNumber</td>
                    <td>@Math.Round(Convert.ToDouble(@item.SellingPrice),2)</td>
                    <td>@Math.Round(Convert.ToDouble(@item.CostPrice),2)</td>
                    <td>@Math.Round(Convert.ToDouble(@item.SellingPrice),2)</td>
                    <td>
                        <a href="@Url.Action("EditProduct","Dashboard", new { id = item.Id})" type="button" class="btn btn-primary">Edit Product</a>
                        <a href="@Url.Action("DeleteProduct","Dashboard", new { id = item.Id})" type="button" class="btn btn-primary">Delete Product</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

