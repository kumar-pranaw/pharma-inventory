@model List<Pharmacy.Models.getLedgerByDateRange_Result>
@{
    ViewBag.Title = "ViewLedgerBySupplierId";
    int sId = Convert.ToInt32(TempData["supplierId"]);
}

@using (Html.BeginForm("ViewLedgerBySupplierId", "Dashboard", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-2">
            <div class="form-group mb-2">
                <label class="form-label" for="example-select">Start Date</label>
                <input type="date" name="StartDate" class="form-control form-control-md rounded-0 border-top-0 border-left-0 border-right-0 px-0" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-2">
                <label class="form-label" for="example-select">End Date</label>
                <input type="date" name="EndDate" class="form-control form-control-md rounded-0 border-top-0 border-left-0 border-right-0 px-0" />
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group mb-2">
                <button type="submit" class="btn btn-sm btn-danger waves-effect waves-themed">Submit</button>
            </div>
        </div>
    </div>
    
}
    
<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Date</th>
            <th>Invoice Number</th>
            <th>Particulars</th>
            <th>Dr. Amount</th>
            <th>Cr. Amount</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.Value.ToShortDateString() </td>
                <td><a href="@Url.Action("GetInvoiceDetailsBySupplierId", "Dashboard", new { invoiceId = item.InvoiceId, supplierId = sId })">@item.InvoiceId</a></td>
                <td>@item.Particulars</td>
                <td>@item.DebitAmunt</td>
                <td>@item.CreditAmount</td>
                <td>@item.BalanceAmount</td>
            </tr>
            }
    </tbody>
</table>