@model List<Pharmacy.Models.getSalesByDateRangeAndSupplierId_Result>
@{
    ViewBag.Title = "GetSaleByDistributorId";
}

<style>
    button.btn.btn-sm.btn-danger.waves-effect.waves-themed {
        margin: 35px 0px 0px 10px;
    }
</style>

<div class="container">
    @using (Html.BeginForm("GetSaleByDistributorId", "Dashboard", FormMethod.Get))
    {
        <div class="row">
            <div class="col-md-2">
                <div class="form-group mb-2">
                    <label class="form-label" for="example-select">Start Date</label>
                    <input type="text" name="StartDate" class="form-control datepicker" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-2">
                    <label class="form-label" for="example-select">End Date</label>
                    <input type="text" name="EndDate" class="form-control datepicker" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group mb-2">
                    <button type="submit" class="btn btn-sm btn-danger waves-effect waves-themed">Submit</button>
                </div>
            </div>
        </div>
    }

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>#Invoice Id</th>
                <th>Date Of Sales</th>
                <th>Total Amount of Sales</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a href="@Url.Action("GetInvoiceDetailsByDistributorId","Dashboard", new { invoiceId = item.Id, customerId = item.CustomerId})">@item.InvoiceId</a></td>
                    <td>@item.DateOfPurchase</td>
                    <td>@item.TotalPurchaseAmount</td>
                </tr>
            }
        </tbody>
    </table>

</div>
